<%- include ('../../partials/Header'); %>
<body>
    <%- include ('../../partials/Navbar'); %>

    

    <form method="post" action="/articles/save">
        <div class="container-fluid">
            <article>
                <header>
                    <div id="input-container">
                        <input type="text" id="article_title" name="article_title" placeholder="TÃ­tulo do artigo" required>
                        <details role="list">
                            <summary aria-haspopup="listbox">Categoria</summary>
                            <ul role="listbox">
                                <% categories.forEach(category =>{ %>
                                    <li>
                                        <label for="<%= category.id %>">
                                          <input type="radio" id="category_id" name="category_id" value="<%= category.id %>">
                                            <%= category.title %>
                                        </label>
                                    </li>
                                <% }) %>
                            </ul>
                        </details>
                    </div>
                    <button type="submit" class="title-btn">
                        <span class="material-symbols-outlined">add</span>
                        Adicionar artigo
                    </button>
                </header>
                <body>
                    <hr>
                    <textarea name="article_text" id="article-text" cols="20" rows="30"></textarea>
                </body>
            </article>
        </div>
    </form>

</body>
<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .title-btn{
        border: none;
        height: 40px;
        width: auto;

        display: flex;
        justify-content: center;
        align-items: center;
    }
    #input-container {
        border: none;
        outline: none;
        width: 40%;
        display: flex;
        justify-self: unset;
    }
    details {
        width: 100%;
        margin-left: 10px;
    }
</style>

<%- include ('../../partials/Footer'); %>
<script src="/tinymce/tinymce.min.js"></script>
